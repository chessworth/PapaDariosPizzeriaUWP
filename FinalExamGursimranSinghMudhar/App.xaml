<Application
    x:Class="FinalExamGursimranSinghMudhar.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinalExamGursimranSinghMudhar">
    <Application.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#AAA"></Setter>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#AAA"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#F2F2F3"></Setter>
            <Setter Property="Foreground" Value="#87A417"></Setter>
            <Setter Property="BorderBrush" Value="#87A417"></Setter>
        </Style>
        
    </Application.Resources>
</Application>
